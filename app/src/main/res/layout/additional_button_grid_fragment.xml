<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdditionalButtonGrid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnHistBrace"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="Hist"> </Button>

            <Button
                android:id="@+id/btnToDegree"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="deg"> </Button>

            <Button
                android:id="@+id/btnToRad"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="rad"> </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSqrt"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="√"> </Button>

            <Button
                android:id="@+id/btnPow"
                android:layout_width="80sp"
                android:layout_height="match_parent"

                android:text="pow"> </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnPi"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="π"> </Button>
            <Button
                android:id="@+id/btnE"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="e"> </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAbs"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="abs"> </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnChangeFragment"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:background="#FFDEAD"

                android:text="..."> </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSin"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="sin"> </Button>

            <Button
                android:id="@+id/btnCos"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="Cos"> </Button>

            <Button
                android:id="@+id/btnTg"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:clickable="false"

                android:text="Tg"> </Button>

            <Button
                android:id="@+id/btnCtg"
                android:layout_width="80sp"
                android:layout_height="wrap_content"

                android:text="Ctg"> </Button>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>