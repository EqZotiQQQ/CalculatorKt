<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainButtonGridFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="5">

        <Button
            android:id="@+id/btnHistBrace"
            android:layout_width="80sp"
            android:background="#FFDEAD"
            android:clickable="false"
            android:onClick="onClick"
            android:text="@string/hist" />

        <Button
            android:id="@+id/btnOpenBrace"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="(" />

        <Button
            android:id="@+id/btnCloseBrace"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text=")" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="C" />

        <Button
            android:id="@+id/btnRemoveSymbol"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="R" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="3" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="/" />

        <Button
            android:id="@+id/btnAdditionalAction1"
            android:layout_width="80sp"
            android:background="#FFDEAD"
            android:clickable="false"
            android:onClick="onClick"
            android:text="\?" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="6" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="*" />

        <Button
            android:id="@+id/btnAdditionalAction2"
            android:layout_width="80sp"
            android:background="#FFDEAD"
            android:clickable="false"
            android:onClick="onClick"
            android:text="\?" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="9" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="-" />

        <Button
            android:id="@+id/btnChangeMainToAdditionalFragment"
            android:layout_width="80sp"
            android:background="#FFDEAD"
            android:onClick="onClick"
            android:text="..." />

        <Button
            android:id="@+id/btn0"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="." />

        <Button
            android:id="@+id/btnPersent"
            android:layout_width="80sp"
            android:clickable="false"
            android:onClick="onClick"
            android:text="%" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="80sp"
            android:onClick="onClick"
            android:text="+" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:onClick="onClick"
            android:text="=" />
    </GridLayout>
</FrameLayout>